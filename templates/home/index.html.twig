{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Bienvenue sur mon portfolio !{% endblock %}

{% block body %}
    <div class="pf-pink-bottom">
        {% include '_includes/navbar.html.twig' %}
        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="text-center alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% include '_includes/welcome.html.twig'%}
    </div>
    <div class="pf-pink-top">
        {% include '_includes/my_history.html.twig' %}
    </div>
    <div class="pf-pink-all">
        {% include '_includes/my_project.html.twig' %}
    </div>
    <div class="pf-pink-bottom">
        {% include '_includes/contact.html.twig' %}
        {% include '_includes/footer.html.Twig' %}
    </div>
{% endblock %}
