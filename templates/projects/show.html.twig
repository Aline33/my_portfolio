{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - projet {{ project.name }}{% endblock %}

{% block body %}
    <div class="pf-bg-project">
    {% include '_includes/navbar.html.twig' %}
        <div class="pf-btn-return">
            <a class="pf-button" href="{{ path('app_home') }}">Retour</a>
        </div>
        <div class="pf-container d-md-flex justify-content-md-between">
            <div class="pf-contain pf-contain1">
                <h2 class="pf-h2-project">{{ project.name }}</h2>
                <p>{{ project.description }}</p>
                <div>
                    <p>Les technologies utilis√©es :</p>
                    <ul>
                    {% for skill in project.skills %}
                        <li>{{ skill.name }}</li>
                    {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="pf-contain text-md-end text-center">
                    <img class="pf-image1" src="{{ mainPicture.file | default('https://placehold.co/600x400') }}" alt=""/>
            </div>
        </div>
        {% if pictures is not empty %}
            <div class="pf-images d-flex justify-content-evenly">
                {% for picture in pictures %}
                    <div>
                        <h3>{{ picture.name }}</h3>
                        <img class="pf-image2 d-flex" src="{{ picture.file }}" alt=""/>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {{ include('_includes/footer.html.twig') }}
{% endblock %}
